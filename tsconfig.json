{
  "compilerOptions": {
    "target": "ES2020",
    "moduleDetection": "force",
    "module": "Preserve",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  }
}
